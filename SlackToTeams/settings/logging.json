{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\data\\logs\\slacktoteams\\log.txt",
                "fileSizeLimitBytes": "10485760",
                "rollOnFileSizeLimit": true,
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fffffff}|{Level}|{SourceContext}|{LineNumber}|{Message:l}{NewLine}"
              }
            }
          ]
        }
      }
    ]
  }
}
